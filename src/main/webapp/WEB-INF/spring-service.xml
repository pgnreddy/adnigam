    <task:scheduler id="scheduler" pool-size="10"/>
    <task:executor id="executor" pool-size="10"/>
    <task:annotation-driven scheduler="scheduler" executor="executor"/>  
    
    <task:scheduled-tasks scheduler="scheduler">
        <task:scheduled ref="messagingServiceImpl" method="processEmailMessagesQueue" fixed-delay="30000"/>
        <task:scheduled ref="messagingServiceImpl" method="processSMSMessagesQueue" fixed-delay="30000"/>   
        <task:scheduled ref="vendorServiceImpl" method="processVendorNotificationsQueue" fixed-delay="30000"/>
        <task:scheduled ref="offersSchedulerImpl" method="schedulePremiumOffers" cron="*/1 * * * * *"/>
        <task:scheduled ref="offersSchedulerImpl" method="scheduleExclusiveOffers" cron="*/1 * * * * *"/>
        <task:scheduled ref="offersSchedulerImpl" method="scheduleTodaysOffers" cron="*/1 * * * * *"/>
    </task:scheduled-tasks>

</beans>
