<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    
    <definition name="vendorBase" template="/WEB-INF/jsp/vendor/vendorBase.jsp">
        <put-attribute name="title"  value="Vendor"/>
        <put-attribute name="header" value="/WEB-INF/jsp/vendor/header.jsp"/>
        <put-attribute name="menu" value="/WEB-INF/jsp/vendor/menu.jsp"/>
        <put-attribute name="body"   value="/WEB-INF/jsp/vendor/emptybody.jsp"/>
        <put-attribute name="footer"   value="/WEB-INF/jsp/vendor/footer.jsp"/>
    </definition>
    
    <definition name="vendor.offers" extends="vendorBase">        
        <put-attribute name="body" value="/WEB-INF/jsp/vendor/offers.jsp"/>
        <put-attribute name="menuselection"   value="offers"/> 
    </definition>
    
    <definition name="vendor.userRequests" extends="vendorBase">        
        <put-attribute name="body" value="/WEB-INF/jsp/vendor/userRequests.jsp"/>
        <put-attribute name="menuselection"   value="userRequests"/> 
    </definition>
    
    <definition name="vendor.profile" extends="vendorBase">        
        <put-attribute name="body" value="/WEB-INF/jsp/vendor/profile.jsp"/>   
        <put-attribute name="menuselection"   value="profile"/>     
    </definition>
    
    <definition name="vendor.orders" extends="vendorBase">        
        <put-attribute name="body" value="/WEB-INF/jsp/vendor/orders.jsp"/>
        <put-attribute name="menuselection"   value="orders"/> 
    </definition>
    
    <definition name="vendor.productCoupons" extends="vendorBase">        
        <put-attribute name="body" value="/WEB-INF/jsp/vendor/productCoupons.jsp"/>
        <put-attribute name="menuselection"   value="productCoupons"/> 
    </definition>
    
     <definition name="vendor.message" extends="vendorBase">        
        <put-attribute name="body" value="/WEB-INF/jsp/vendor/message.jsp"/>
        <put-attribute name="menuselection"   value="message"/> 
    </definition>
     
</tiles-definitions>